#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: matrix-transform {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <4>;
//               | SW02 | SW03 | SW04 | SW05 |                          | SW18 | SW19 | SW20 | SW21 |
// | SW01 | SW06 | SW07 | SW08 | SW09 | SW10 |                          | SW23 | SW24 | SW25 | SW26 | SW27 | SW22 |
//        | SW11 | SW12 | SW13 | SW14 | SW15 |                          | SW28 | SW29 | SW30 | SW31 | SW32 |
//                             | SW16 | SW17 |                          | SW33 | SW34 |

        map = <
                        RC(0,2) RC(0,3) RC(0,4) RC(0,5)                 RC(0,6) RC(0,7) RC(0,8) RC(0,9)
        RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)                 RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11)
                RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)                 RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10)
                                        RC(3,4) RC(3,5)                 RC(3,6) RC(3,7)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";

        diode-direction = "col2row";
        
    };

};